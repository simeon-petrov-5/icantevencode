---
import { Image } from "@astrojs/image/components";
import heroImage from "../../assets/imgs/me-myself-and-i.jpg";

const codePerson = `const person = { 
  firstName: "Simeon", 
  lastName: "Petrov" 
}`;

const codeAbout = `const about = {
    profesion: "Developer", 
    whatIDo: "Nobody knows tbh", 
    hobby:"Styling buttons...?"
}`;
---

<section class="hero">
  <div class="heroContent">
    <h1 data-aos="fade-up" class="title">
      Hello <span data-aos="fade-up" data-aos-delay="200">I'm Simeon</span>
    </h1>

    <div
      id="hero-image"
      class="imgWrapper"
      data-aos="fade-up"
      data-aos-delay="700"
    >
      <!-- <img class="img" src="/assets/me-myself.jpg" alt="Simeon photo" /> -->
      <Image
        class="img"
        src={heroImage}
        width={380}
        aspectRatio="2:3"
        format="webp"
        alt="Simeon photo"
      />
    </div>

    <div class="codes">
      <code
        class="code"
        data-aos-anchor="#hero-image"
        data-aos-anchor-placement="top-bottom"
        data-aos="fade-left"
        data-aos-delay="1000">{codePerson}</code
      >
      <code
        class="code"
        data-aos-anchor="#hero-image"
        data-aos-anchor-placement="top-bottom"
        data-aos="fade-left"
        data-aos-delay="1400">{codeAbout}</code
      >
    </div>
  </div>
</section>

<style lang="scss">
  @use "../../assets/styles/design-tokens/base-colors";
  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 4rem 2rem;
    overflow: hidden;

    .heroContent {
      width: 100%;
      max-width: 480px;
    }
    .title {
      font-size: 4.5rem;
      line-height: 1.2;
      color: var(--clr-primary-d2);
      margin-bottom: 3rem;
    }

    .imgWrapper {
      width: 100%;
      max-width: 400px;
      aspect-ratio: 1 / 1;
      margin: 0 auto 3rem;
      .img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
        border-radius: 1rem;
      }
    }
    .title span {
      display: block;
      color: var(--clr-primary);
      text-align: center;
      font-size: 3rem;
      font-family: "Open Sans";
      font-weight: 300;
      line-height: 1;
    }

    .code {
      width: 100%;
      max-width: 360px;
      display: block;
      padding: 1rem;
      font-size: 15px;
      white-space: pre;
      color: var(--clr-primary);
      background-color: var(--clr-primary-dark-300);
      background-image: linear-gradient(
        to right bottom,
        base-colors.$gray-9,
        base-colors.$dark-6,
        base-colors.$dark-7,
        base-colors.$dark-8,
        base-colors.$dark-9
      );
      border: 1px solid var(--clr-primary-d2);
      border-radius: 0.5rem;
      overflow: hidden;

      &:first-child {
        margin-bottom: 2rem;
      }

      &:last-child {
        margin-left: auto;
      }
    }
  }

  @media screen and (min-width: 768px) {
    .hero {
      .heroContent {
        max-width: 960px;
        display: grid;
        gap: 1rem;
        grid-template-columns: 45% 1fr;
        grid-template-rows: 160px auto;
        grid-template-areas:
          "img title"
          "img code";
        align-content: center;
      }
      .imgWrapper {
        grid-area: img;
        aspect-ratio: 2 / 3;
        .img {
          object-position: center;
        }
      }
      .title {
        grid-area: title;
        margin-bottom: 0;
      }
      .codes {
        grid-area: code;
      }
    }
  }

  @media screen and (min-width: 1080px) {
    .hero .heroContent {
      grid-template-columns: 380px 1fr;
      max-width: 900px;
    }
  }
</style>
