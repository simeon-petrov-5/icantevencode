---
import { Picture } from "@astrojs/image/components";

export interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="thumbnail">
  <Picture
    class="img"
    src={src}
    alt={alt}
    format="webp"
    widths={[360, 450, 600]}
    aspectRatio={16 / 9}
    sizes="(max-width: 600px) 100vw, 600px"
    quality={90}
  />
</div>

<style lang="scss" scoped>
  .thumbnail {
    border-radius: 0.5rem;
    overflow: hidden;
    aspect-ratio: 16 / 9;
    width: 100%;
    max-width: 600px;
    box-shadow: var(--shadow-md);
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 1rem;

    .img {
      object-fit: cover;
      width: 100%;
      height: 100%;
    }
  }
</style>
