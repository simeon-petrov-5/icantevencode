      border-width: 2px;
      border-color: var(--clr-primary-d3);
      border-style: solid;
      padding: 0.25rem 0.75rem;
    }

    table thead {
      background-color: var(--clr-primary-d3);
    }

    img {
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>